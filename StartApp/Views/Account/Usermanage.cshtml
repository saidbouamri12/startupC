@model List<StarApp.Core.ModelsView.UserRole>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <table id="usertable" class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Fullname</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>@user.Iduser</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.Fullname</td>
                            <td>
                                @foreach(var role in user.Role)
                                    {
                                        @role.Name
                                    }
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Dropdown button
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" style="background-color:Red; color:white " href="#">Delete</a></li>
                                        <li><a class="dropdown-item" style="background-color:yellow; color:white" href="#">Edit</a></li>
                                        <li><a class="dropdown-item"  href="#">Lock User</a></li>
                                        <li><a class="dropdown-item"  href="#">UnLock User</a></li>
                                        <li><a class="dropdown-item" href="#"> Change Password </a></li>
                                        <li><a class="dropdown-item" href="#">Send Email to Change Password</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>