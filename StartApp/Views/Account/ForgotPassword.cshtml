@model StarApp.Core.ModelsView.ForgotPasswordViewModel;
<h1>ForgotPassword</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Forgot Password</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ForgotPassword" method="post">
                        @Html.AntiForgeryToken()
                        <p>Email address you use to log in to your account </p>
                        
                        <p>we'll send you an email with instructions to choose a new password</p>
                        <div class="form-group">
                            <label for="email">email:</label>
                            <input type="text" asp-for="Email" class="form-control"  required />
                        </div>
                        <div class="form-group">
                            <button style="width:100px; margin-top:20px" type="submit" class="btn btn-primary">Continue</button>
                        </div>
                        
                     </form>
                </div>
            </div>
        </div>

    </div>
</div>
